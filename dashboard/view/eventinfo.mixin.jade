mixin eventinfo(event)
  .panel.panel-default
    .panel-heading
      span.pull-right.badge(rel='tooltip', title='', data-original-title='Points offered for this event.') 10
      h4.list-group-item-heading
        small
          i.fa.fa-magic(rel='tooltip', title='', data-original-title='Show')
        = event.name
    .panel-body
      p
        i.fa.fa-clock-o
        = event.showtime                         
        button.btn.btn-sm.btn-default.pull-right(type='button', data-toggle='collapse', data-target='#desc#{event.uuid}')
          i.fa.fa-eye
          |  Toggle Description
        br
        i.fa.fa-building-o
        = event.location
      div.collapse(id="desc#{event.uuid}")
        blockquote
          = event.description
      p
        block
